@page "/addverse"

<h3>Add a Verse</h3>

<MudStack Style="width: 300px">
    @foreach (var variant in Enum.GetValues(typeof(Variant)).Cast<Variant>())
    {
        <MudSelect @bind-Value="book"
        Variant="variant"
        Label="@variant.ToString()"
        HelperText="Book"
        ValueChanged="OnBookChange">
            @foreach (var book in books)
            {
                <MudSelectItem Value="book">@book</MudSelectItem>
            }
        </MudSelect>
    }
    @foreach (var variant in Enum.GetValues(typeof(Variant)).Cast<Variant>())
    {
        <MudSelect @bind-Value="chapter"
        Variant="variant"
        Label="@variant.ToString()"
        HelperText="Chapter"
        ValueChanged="OnChapterChange">
            @foreach (var chapter in chapters)
            {
                <MudSelectItem Value="book">@book</MudSelectItem>
            }
        </MudSelect>
    }
</MudStack>

@code {
    private string book = string.Empty;
    private int chapter;
    private int verse;
    private int[] chapters;
    private int[] verses;

    private void OnBookChange()
    {
        chapter = 0;
        verse = 0;

        switch (book)
        {
            case "Genesis":
                chapters = Enumerable.Range(1, 50).ToArray();
                break;
            default:
                throw new Exception("Critical error changing selected book.");
        }
    }

    private void OnChapterChange()
    {
        verse = 0;
    }

    private class Bible
